@page
@model CustomerManagementRazorPages.Pages.Orders.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i>
                        Create New Order
                    </h4>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <h6>Please correct the following errors:</h6>
                            <div asp-validation-summary="All" class="mb-0"></div>
                        </div>
                    }

                    <form method="post" id="createOrderFrom">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.CustomerId" class="form-label">
                                    <i class="fas fa-user"></i> Customer *
                                </label>
                                <select asp-for="Order.CustomerId" class="form-select" id="customerSelect">
                                    <option value="">-- Select Customer --</option>
                                    @if (Model.Customers?.Any() == true)
                                    {
                                        @foreach (var customer in Model.Customers) 
                                        {
                                            <option value="@customer.Id"
                                                    data-customer-type="@customer.CustomerType"
                                                    data-customer-name="@customer.Name"
                                                    data-customer-name="@customer.Email">
                                                    @customer.Name (@customer.Email)
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Order.CustomerId" class="text-danger"></span>

                                <div id="customerDetails" class="mt-2" style="display: none;">
                                    <div class="card bg-light">
                                        <div class="card-body p-2">
                                            <small>
                                                <strong>Customer Type:</strong> <span id="customerType"></span>
                                                <span id="discountInfo" class="text-success"></span>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.ProductId" class="form-label">
                                    <i class="fas fa-user"></i> Product *
                                </label>
                                <select asp-for="Order.ProductId" class="form-select" id="productSelect">
                                    <option value="">-- Select Product --</option>
                                    @if (Model.Products?.Any() == true)
                                    {
                                        @foreach (var product in Model.Products) 
                                        {
                                            <option value="@product.Id"
                                                    data-price="@product.Price"
                                                    data-stock="@product.StockQuantity"
                                                    data-name="@product.Name">
                                                    @product.Name - @product.Price.ToString("F2") (Stock: @product.StockQuantity)
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Order.ProductId" class="text-danger"></span>

                                <div id="productDetails" class="mt-2" style="display: none;">
                                    <div class="card bg-light">
                                        <div class="card-body p-2">
                                            <small>
                                                <strong>Price:</strong> <span id="productPrice"></span> |
                                                <strong>Available Stock:</strong> <span id="productStock"></span>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.Quantity" class="form-label">
                                    <i class="fas fa-sort-numeric-up"></i> Quantity *
                                </label>
                                <input asp-for="Order.Quantity" type="number" class="form-control"
                                        min="1" max="999" id="quantityInput" placeholder="Enter quantity" />
                                <span asp-validation-for="Order.Quantity" class="text-danger"></span>
                                <div id="quantityValidation" class="text-danger mt-1" style="display: none;"></div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-dollar-sign"></i> Total Amount
                                </label>
                               <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="text" class="form-control" id="totalAmount" readonly
                                            placeholder="0.00" style="background-color: #f8f9fa;">
                               </div>
                               <small id="discountDisplay" class="text-success"></small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Order.Notes" class="form-label">
                                <i class="fas fa-sticky-note"></i> Notes (Optional)
                            </label>
                            <textarea asp-for="Order.Notes" class="form-control" rows="3"
                                        placeholder="Any additional notes for this order..."></textarea>
                            <span asp-validation-for="Order.Notes" class="text-danger"></span>
                        </div>

                        <div id="orderSummary" class="alert alert-info" style="display: none;">
                            <h6><i class="fas fa-info-circle"></i> Order Summary</h6>
                            <div id="summaryContext"></div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Orders
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
                                <i class="fas fa-save"></i> Create Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

