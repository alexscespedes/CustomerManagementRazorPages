@page
@model CustomerManagementRazorPages.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Order!.CustomerId)</dt>
        <dd class="col-sm-10">@Model.Order?.CustomerId</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Order!.ProductId)</dt>
        <dd class="col-sm-10">@Model.Order?.ProductId</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Order!.Quantity)</dt>
        <dd class="col-sm-10">@Model.Order?.Quantity</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Order!.TotalAmount)</dt>
        <dd class="col-sm-10">@Model.Order?.TotalAmount</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Order!.OrderDate)</dt>
        <dd class="col-sm-10">@Model.Order?.OrderDate</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Order!.Status)</dt>
        <dd class="col-sm-10">@Model.Order?.Status</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Order!.Notes)</dt>
        <dd class="col-sm-10">@Model.Order?.Notes</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Order.Id">
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
    
</div>