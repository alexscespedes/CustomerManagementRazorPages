@page
@model CustomerManagementRazorPages.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Customer List</h2>

<p>
    <a asp-page="./Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>CustomerType</th>
            <th>Status</th>
            <th>CreatedDate</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
                <td>@customer.CustomerType</td>
                <td>@(customer.IsActive ? "Active" : "Inactive")</td>
                <td>@customer.CreatedDate</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@customer.Id">Details</a> |
                    <a asp-page="./Edit" asp-route-id="@customer.Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
