@model CustomerManagementRazorPages.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Product!.Name)</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Product!.Price)</dt>
        <dd class="col-sm-10">@Model.Product?.Price</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Product!.StockQuantity)</dt>
        <dd class="col-sm-10">@Model.Product?.StockQuantity</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Product!.Description)</dt>
        <dd class="col-sm-10">@Model.Product?.Description</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Product!.Category)</dt>
        <dd class="col-sm-10">@Model.Product?.Category</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Product!.ImageUrl)</dt>
        <dd class="col-sm-10">@Model.Product?.ImageUrl</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Product!.CreatedDate)</dt>
        <dd class="col-sm-10">@Model.Product?.CreatedDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Product!.IsActive)</dt>
        <dd class="col-sm-10">@(Model.Product!.IsActive ? "Active" : "Inactive")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.Id">
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
    
</div>